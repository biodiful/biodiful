<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity ChallengerPool.
    -->
    <changeSet id="20251029163653-1" author="jhipster">
        <createTable tableName="challenger_pool">
            <column name="id" type="bigint" autoIncrement="true" startWith="1500">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pool_order" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="challengers_url" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="number_of_matches" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="matches_description" type="${clobType}">
                <constraints nullable="false" />
            </column>
            <column name="survey_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20251029163653-1-relations" author="jhipster">
        <addForeignKeyConstraint baseColumnNames="survey_id"
                                 baseTableName="challenger_pool"
                                 constraintName="fk_challenger_pool__survey_id"
                                 referencedColumnNames="id"
                                 referencedTableName="survey"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
